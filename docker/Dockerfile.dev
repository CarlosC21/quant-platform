# docker/Dockerfile.dev
FROM python:3.12-slim

ENV DEBIAN_FRONTEND=noninteractive \
    POETRY_HOME="/opt/poetry" \
    POETRY_VIRTUALENVS_CREATE=false \
    PATH="/opt/poetry/bin:$PATH"

# System packages
RUN apt-get update && apt-get install -y --no-install-recommends \
        build-essential \
        git \
        curl \
        ca-certificates \
        libpq-dev \
        wget \
        gnupg \
        unzip \
        bash-completion \
    && rm -rf /var/lib/apt/lists/*

# Install Poetry
RUN curl -sSL https://install.python-poetry.org | python3 -

WORKDIR /workspace

# Copy only dependency files for layer caching
COPY pyproject.toml poetry.lock* /workspace/

# Install dependencies only (do NOT install the project itself in this layer)
RUN poetry config virtualenvs.create false \
 && poetry install --no-interaction --with dev --no-root

# Copy full repository
COPY . /workspace

# Create non-root user and set ownership
RUN useradd --create-home dev && chown -R dev:dev /workspace
USER dev
ENV HOME=/home/dev

CMD ["bash"]
