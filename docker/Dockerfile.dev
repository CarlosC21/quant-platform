# docker/Dockerfile.dev
FROM python:3.13-slim

ENV DEBIAN_FRONTEND=noninteractive
ENV POETRY_VIRTUALENVS_CREATE=false \
    POETRY_HOME="/opt/poetry" \
    PATH="/opt/poetry/bin:$PATH"

# System packages for building many scientific packages and typical tools
RUN apt-get update && apt-get install -y --no-install-recommends \
    build-essential \
    git \
    curl \
    ca-certificates \
    libpq-dev \
    wget \
    gnupg \
    unzip \
 && rm -rf /var/lib/apt/lists/*

# Install Poetry
RUN curl -sSL https://install.python-poetry.org | python - --no-modify-path \
 && ln -s /root/.local/bin/poetry /usr/local/bin/poetry || true

WORKDIR /workspace

# Copy only pyproject + poetry.lock for dependency caching
COPY pyproject.toml poetry.lock* /workspace/

# Install project deps (including dev) into image for convenience during build
# This will install into the system Python (we disabled Poetry venv creation)
RUN poetry install --no-interaction --with dev

# Copy the full repo
COPY . /workspace

# Default user (non-root)
RUN useradd --create-home dev && chown -R dev:dev /workspace
USER dev
ENV HOME=/home/dev

# Default command: drop into bash for interactive dev
CMD ["bash"]
